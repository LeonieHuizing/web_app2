package com.klm.api.operations.controller;

import com.klm.api.operations.roster.OperationRoster;
import org.springframework.web.bind.annotation.RequestMapping;
//import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class OperationController {

	@RequestMapping("/v1/employee/{employeeId}&callback=JSONP_CALLBACK")
    //GET http://localhost:8080/v1/employee/employeeNumber
	//OUPUT RequestMapping is standard in JSON
    public OperationRoster getOperationRosterForEmployee() { 	
    	return new OperationRoster(555, "leonie");
    }
    
}  